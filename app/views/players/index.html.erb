<div class="page-container">
  <h1 class="page-title">Players</h1>

  <div class="card">
    <h2 class="card-title">Add New Player</h2>

    <%= form_with model: Player.new, local: true, class: "form-inline" do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Enter player name", class: "input-field", required: true %>
      </div>
      &nbsp;&nbsp;
      <%= f.submit "Add Player", class: "btn-primary" %>
    <% end %>
  </div>

  <div class="card">
    <h2 class="card-title">All Players</h2>

    <table class="styled-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Wins</th>
          <th>Losses</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.wins %></td>
            <td><%= player.losses %></td>
            <td>
              <%= link_to "Remove", player_path(player.id), data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") }, class: "btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination-container">
        <%= will_paginate @paginated_players %>
    </div>
  </div>
</div>
